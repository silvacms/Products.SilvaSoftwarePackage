<tal:center>

  <p tal:define="index content/get_default | nothing" 
     tal:condition="index" 
     tal:replace="structure index/view">View</p>

  <table class="silvatable list">
    <thead>
      <tr>
        <th class="align-left">Package</th>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="package view/get_packages">
        <td>
          <a tal:attributes="href package/url" 
             tal:content="package/name">
          </a>
        </td>
      </tr>
    </tbody>
  </table>

</tal:center>