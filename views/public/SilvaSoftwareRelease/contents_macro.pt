<html>
  <body>
    <div metal:define-macro="release">
      <table class="silvatable list" tal:define="mangle modules/Products/Silva/mangle">
        <thead>
          <tr>
            <th>Filename</th>
            <th>Release date</th>
            <th>Size</th>
          </tr>
        </thead>
        <tr tal:repeat="file python:model.get_files()">
          <td><a tal:attributes="href file/absolute_url" tal:content="file/get_filename" /></td>
          <td tal:content="python: mangle.DateTime(file.get_modification_datetime()).toStr()" />
          <td tal:content="file/get_file_size" />
        </tr>
      </table>
    </div>
  </body>
</html>
